@model IEnumerable<FinalApp_SM.Models.StudentAttendance>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<body style="background-color:lightcyan">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    @using (Html.BeginForm("Index", "StudentAttendances", FormMethod.Get))
    {
        <p align="center">
            Enter Student ID:<input type="text" name="StudentID">
            <button style="font-size=10px">Search</button>
        </p>
    }
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AttendanceID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student.StudentID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class.ClassType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AttendanceTakenDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsPresent)
            </th>


            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AttendanceID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.StudentID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Class.ClassType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AttendanceTakenDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsPresent)
                </td>


                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.AttendanceID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.AttendanceID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.AttendanceID })
                </td>
            </tr>
        }

    </table>
